{
    "configurations": [
        {
            "name": "ESP32",
            "includePath": [
                "${workspaceRoot}",
                "${workspaceRoot}/**",
                "${env:IDF_PATH}/components/**"
            ],
            "intelliSenseMode": "gcc-x64",
            "browse": {
                "path": [
                    "${workspaceRoot}",
                    "${workspaceRoot}/**",
                    "${env:IDF_PATH}/components"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": "${workspaceRoot}/.vscode/browse.vc.db"
            },
            "compileCommands": "${workspaceFolder}/build/compile_commands.json",
            "cStandard": "c99",
            "cppStandard": "c++11",
            "defines": [
                "MG_LOCALS=1"
            ]
        }
    ],
    "version": 4
}