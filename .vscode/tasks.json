{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs": [
        {
            "id": "port",
            "type": "promptString",
            "description": "Enter the port to which your ESP32 is connected.",
            "default": "COM5",
        }
    ],
    "tasks": [
        {    
            "label": "Build",
            "type": "shell",
            "command": "idf.py",
            "args": [ "build" ],
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "owner": "c",
                "fileLocation": "autoDetect",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Clean",            
            "type": "shell",
            "command": "idf.py",
            "args": [ "clean"  ],
            "presentation": {
                "reveal": "always",
                "showReuseMessage": true
            },
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "idf.py",
            "args": [ "-p", "${config:port}", "flash"],
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "label": "Flash & Monitor",
            "type": "shell",
            "command": "idf.py",
            "args": [ "-p", "${config:port}", "flash", "monitor"],
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "label": "Monitor",
            "type":"shell",
            "command": "idf.py",
            "args": [ "-p", "${config:port}", "monitor" ],
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "label": "Menuconfig",
            "type":"shell",
            "command": "idf.py",
            "args": [ "menuconfig" ],
            "presentation": {
                "reveal": "always",
                "focus": true
            }
        }
    ]
}